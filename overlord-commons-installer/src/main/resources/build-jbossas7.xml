<?xml version="1.0" encoding="UTF-8"?>
<project name="Install Overlord Commons Components" default="install-all">

  <property file="build.properties" />

  <property name="picketlink.version" value="2.1.6.Final" />
  <property name="picketlink.download.url" value="https://repository.jboss.org/nexus/content/groups/public/org/picketlink/picketlink-installer/${picketlink.version}/picketlink-installer-${picketlink.version}.zip" />
  <property name="overlord-commons.version" value="1.0.1" />
  <property name="overlord-commons-idp.download.url" value="https://repository.jboss.org/nexus/content/groups/public/org/overlord/overlord-commons-idp/${overlord-commons.version}/overlord-commons-idp-${overlord-commons.version}.war" />
  <property name="overlord-commons-auth.download.url" value="https://repository.jboss.org/nexus/content/groups/public/org/overlord/overlord-commons-auth/${overlord-commons.version}/overlord-commons-auth-${overlord-commons.version}.jar" />

  <property name="basedir" value="." />
  <property name="installdir" value="${basedir}/target" />
  <property name="jboss.as.dist.dir" value="${installdir}/jboss-as-7.1.1.Final" />

  <!-- Install both PicketLink and Overlord Commons -->
  <target name="install-all">
    <echo message=" " />
    <echo message="#######################################################" />
    <echo message="# Running the Overlord Commons installer.  This will  #" />
    <echo message="# install and configure the Overlord IDP (and all of  #" />
    <echo message="# its dependencies into JBoss 7.1.1.Final.            #" />
    <echo message="#                                                     #" />
    <echo message="# When calling, you can pass these properties:        #" />
    <echo message="#    picketlink.version:  PicketLink version          #" />
    <echo message="#    overlord-commons.version:  Overlord Commons ver. #" />
    <echo message="#    jboss.as.dist.dir:  location of JBoss AS 7.1     #" />
    <echo message="#######################################################" />

    <antcall target="install-picketlink" />
    <antcall target="install-overlord-commons" />

    <echo message=" " />
    <echo message="########################################" />
    <echo message="# Finished installing Overlord Commons #" />
    <echo message="########################################" />
    <echo message=" " />
  </target>

  <!-- Install PicketLink -->
  <target name="install-picketlink" depends="picketlink.check" unless="picketlink.already.installed">
    <echo>Downloading PicketLink ${picketlink.version}</echo>
    <get src="${picketlink.download.url}" dest="${installdir}/picketlink-installer-${picketlink.version}.zip" usetimestamp="true" />
    <echo>Unzipping PicketLink ${picketlink.version}</echo>
    <unzip src="${installdir}/picketlink-installer-${picketlink.version}.zip" dest="${installdir}" overwrite="false" />
    <echo>Installing PicketLink Modules in JBoss AS 7.1.1.Final</echo>
    <property file="${installdir}/picketlink-installer-${picketlink.version}/installer.properties" />
    <ant antfile="${installdir}/picketlink-installer-${picketlink.version}/build.xml" 
         dir="${installdir}/picketlink-installer-${picketlink.version}" 
         target="backup-as7-files" />
    <ant antfile="${installdir}/picketlink-installer-${picketlink.version}/build.xml" 
         dir="${installdir}/picketlink-installer-${picketlink.version}" 
         target="install-picketlink" />
    <ant antfile="${installdir}/picketlink-installer-${picketlink.version}/build.xml" 
         dir="${installdir}/picketlink-installer-${picketlink.version}" 
         target="install-picketlink-subsystem" />
  </target>

  <!-- Install Overlord Commons -->
  <target name="install-overlord-commons" depends="overlord-commons.check" unless="overlord-commons.already.installed">
    <echo>Downloading overlord-commons-idp-${overlord-commons.version}.war</echo>
    <get src="${overlord-commons-idp.download.url}" dest="${installdir}/overlord-commons-idp-${overlord-commons.version}.war" usetimestamp="true" />
    <echo>Deploying the Overlord IDP</echo>
    <copy file="${installdir}/overlord-commons-idp-${overlord-commons.version}.war" tofile="${jboss.as.dist.dir}/standalone/deployments/overlord-idp.war" overwrite="true" />
    <unzip src="${installdir}/overlord-commons-idp-${overlord-commons.version}.war" dest="${installdir}/overlord-commons-idp-resources">
      <patternset>
        <include name="**/*.properties" />
      </patternset>
    </unzip>
    <copy file="${installdir}/overlord-commons-idp-resources/WEB-INF/classes/overlord-idp-users.properties" tofile="${jboss.as.dist.dir}/standalone/configuration/overlord-idp-users.properties" overwrite="true" />
    <copy file="${installdir}/overlord-commons-idp-resources/WEB-INF/classes/overlord-idp-roles.properties" tofile="${jboss.as.dist.dir}/standalone/configuration/overlord-idp-roles.properties" overwrite="true" />
    <echo>Configuring standalone.xml with Overlord login-modules.</echo>
    <copy file="${jboss.as.dist.dir}/standalone/configuration/standalone.xml" tofile="${jboss.as.dist.dir}/standalone/configuration/standalone-sramp-backup.xml" overwrite="true" />
    <xslt 
      style="xslt/addSecurityDomains-jbossas7.xslt"
      in="${jboss.as.dist.dir}/standalone/configuration/standalone.xml"
      out="${installdir}/_tmp_standalone.xml" />
    <copy file="${installdir}/_tmp_standalone.xml" tofile="${jboss.as.dist.dir}/standalone/configuration/standalone.xml" overwrite="true" />
    <delete file="${installdir}/_tmp_standalone.xml" />
    
    <!-- Create the Overlord Commons Auth module -->
    <mkdir dir="${jboss.as.dist.dir}/modules/org/overlord/commons/overlord-commons-auth/main" />
    <copy file="modules/overlord-commons-auth-module.xml" tofile="${jboss.as.dist.dir}/modules/org/overlord/commons/overlord-commons-auth/main/module.xml">
      <filterset>
        <filter token="VERSION" value="${overlord-commons.version}"/>
      </filterset>
    </copy>
    <get src="${overlord-commons-auth.download.url}" dest="${jboss.as.dist.dir}/modules/org/overlord/commons/overlord-commons-auth/main/overlord-commons-auth-${overlord-commons.version}.jar" usetimestamp="true" />
  </target>

  
  <target name="picketlink.check">
    <condition property="picketlink.already.installed">
      <available file="${installdir}/jboss-as-7.1.1.Final/modules/org/picketlink/main/picketlink-core-2.1.6.Final.jar" type="file" />
    </condition>
  </target>

  <target name="overlord-commons.check">
    <condition property="overlord-commons.already.installed">
      <available file="${installdir}/jboss-as-7.1.1.Final/standalone/configuration/overlord-idp-roles.properties" type="file" />
    </condition>
  </target>

</project>